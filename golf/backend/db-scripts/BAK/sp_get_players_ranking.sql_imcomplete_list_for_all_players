USE `Golf_dev`;
DROP procedure IF EXISTS `get_players_ranking`;

DELIMITER $$
USE `Golf_dev`$$

CREATE DEFINER=`swang`@`%` PROCEDURE `get_players_ranking`(tid INT)
BEGIN

DECLARE tmnt_year INT;
SELECT DATE_FORMAT(tt.start_at, '%Y') FROM tournaments tt WHERE tt.id = tid INTO tmnt_year;

CALL create_tmp_table_poy_point(tid, -1);     -- the poy_point  for current tournament


SELECT tp.id AS tpid, p.id AS player_id, CONCAT(p.lastname, ', ', p.firstname) AS player, p.gender,
tp.gross_score AS GSC, 
tp.gross_rank AS GRK, 
-- GET_CLUB_INDEX(tid, p.id) AS CDX,
-- GET_POY_POINTS(tid, p.id) AS PYP,
pp.poy AS PYP,
-- gross_score - GET_CLUB_INDEX(tid, p.id) AS NSC, 
tp.pos

FROM tplayers tp
JOIN players p ON p.id = tp.player_id AND tp.tournament_id = tid
JOIN tmp_poy_point pp ON pp.id = tp.player_id

WHERE 
tp.year = tmnt_year
-- ADN (GET_CLUB_INDEX(tid, p.id) > 0 OR GET_POY_RANK(tid, p.id) > 0) 
-- AND (gross_score > 0 OR case when !score_only then gross_score IS NULL END)
AND (gross_score > 0 OR gross_score is NULL)
-- AND gross_score > 0

ORDER BY gross_score;

END

$$
delimiter ;

